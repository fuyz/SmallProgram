.container{
	width: 100%;
	height: 100%;
}

.topNav{
	border-top: 1px solid #fff;
	background: rgb(255,45,85);
	width: 100%;
	height: 30px;
	overflow: hidden;
}
.navItem{
	display: inline-block;
	color: rgb(255,255,255);
	font-weight: 500;
	font-size: 14px;
	padding: 5px 10px;
}
.navItem.active{
	color: #fff;
	font-weight: 900;
	font-size: 16px;
	border-bottom: 8px solid #fff;
}
.swiper{
	width: 100%;
	height: 450px;
	display: block;
	margin-top: 3px;
}
.swiper-item{
	/*width: 100%;*/
	height: 450px;
}
.scrollView{
	height:450px;
}

.contentWrapper{
	border-bottom: 1px solid #ddd;
	margin-bottom: 10px;
	padding-bottom: 5px;
}
.user{
	display: flex;
}
.u-l{
	flex: 0 0 40px;
}

.user image{
	width: 25px;
	height: 25px;
	border-radius: 50%;
	vertical-align: middle;
	margin: 0 10px;
}

.u-name{
	color: rgb(255,45,85);
	font-size: 13px;
	display: block;
}
.u-time{
	font-size: 12px;
	color: #555;
	display: block;
}
.text{
	margin: 10px 10px 10px 20px;
	font-size: 15px;
	text-indent: 2em;
}
.videoWrapper,.imgWrapper {
	text-align: center;
}
.videoWrapper video{
	width: 90%;
}
.imgWrapper image{
	width: 90%;
}

.detail-list{
	text-align: center;
	margin-bottom: 5px;
}
.detail-item{
	font-size: 13px;
	color: #999;
	display: inline-block;
	margin: 0 15px;
}
.detail-item image{
	width: 20px;
	height: 20px;
	vertical-align: middle;
	margin-right: 5px;
}

.c-wrapper{
	background: #cefeae;
	padding: 5px 10px;
	font-size: 13px;
	margin: 0px 15px;
}
.c-wrapper .name{
	color: rgb(3,75,120);
}

.showOrHidden{
	color: blue;
	font-size: 15px;
	line-height: 20px;
	margin: -5px 20px 10px;
	font-weight: 800px;
}
[class*='up']{
	max-height: 100px;
	overflow: hidden;
}
.showOrHidden.down{
	max-height: 100%;
}